generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("POSTGRES_PRISMA_URL")
  directUrl = env("POSTGRES_URL_NON_POOLING")
}

model Deal {
  id            Int      @id @default(autoincrement())
  deal_title    String
  is_price      String
  was_price     String
  discount_code String
  seller_name   String
  brand_name    String
  link_to_deal  String
  short_offer   String
  image         String
  createdAt     DateTime @default(now())
}
