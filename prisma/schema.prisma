generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Deal {
  id              String    @id @default(cuid())
  deal_title      String
  brand_name      String
  short_offer     String?
  BrandName       String
  seller_name     String?
  expiration_date DateTime? @db.Date
  discount_code   String?
  is_price        String
  was_price       String?
  link_to_image   String
  link_to_deal    String
  createdAt       DateTime? @default(now())
}